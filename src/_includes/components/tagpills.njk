<div class="">
  {% for tag in tags %}
    {# Knock out the first iteration of the loop to drop the default "post" tag generated in `posts/posts.json`. #}
    {# If there's a better/easier way of doing this, please LMK.  #}
    {% if not loop.first %}
      <div class="inline-block p-2">
        <a alt="tagged {{ tag }}" aria-label="tagged {{ tag }}" href="/tags/{{ tag | slug }}/" class="px-4 py-2 text-sm {{ colors.tagPillCustom.text or colors.tagPillDefault.text }} dark:{{ colors.tagPillCustom.textDark or colors.tagPillDefault.textDark }} {{ colors.tagPillCustom.bg or colors.tagPillDefault.bg }} dark:{{ colors.tagPillCustom.bgDark or colors.tagPillDefault.bgDark }} rounded-full hover:{{ colors.tagPillCustom.textHover or colors.tagPillDefault.textHover }} dark:hover:{{ colors.tagPillCustom.textHoverDark or colors.tagPillDefault.textHoverDark }} hover:{{ colors.tagPillCustom.bgHover or colors.tagPillDefault.bgHover }} dark:hover:{{ colors.tagPillCustom.bgHoverDark or colors.tagPillDefault.bgHoverDark }} transition-colors duration-200">{{ tag }}</a>
      </div>
    {% endif %}
  {% endfor %}
</div>