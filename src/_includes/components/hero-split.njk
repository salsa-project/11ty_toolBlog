







<main class="lg:relative {{ heroSettings.bg.color or '' }} {{ heroSettings.height.mobile or 'h-1/1' }} sm:{{
    heroSettings.height.desktop or heroSettings.height.mobile or 'h-1/1' }}" style="box-shadow: 1 1 3 5;">
  <div class="w-full pt-16 pb-20 mx-auto text-center max-w-7xl lg:py-20 lg:pl-12 lg:text-left">
    <div class="absolute px-4 lg:w-w3/4 sm:px-8 xl:pr-16 z-20">
      <p class="text-secondColor">Don't Hesitate</p>
      <h2 class="text-4xl font-semibold leading-10 tracking-tight {{ heroSettings.headingTextColor or 'text-white' }} sm:text-5xl
          sm:leading-none md:text-6xl lg:text-5xl xl:text-6xl p-0">
        {{ heroSettings.headingText | safe }}
      </h2>
      <p class="max-w-md mt-3 text-lg {{ heroSettings.subheadingTextColor }} sm:text-xl md:mt-5 md:max-w-3xl">
        {{ heroSettings.subheadingText | safe }}
      </p>
      {% if heroSettings.buttonText %}
        <div class="w-full mt-12 ">
          <a href="{{ heroSettings.buttonURL }}" class="p-4 rounded-lg {{ heroSettings.buttonTextColor or colors.buttonCustom.text or colors.buttonDefault.text }} {{ heroSettings.buttonBgColor or colors.buttonCustom.bg or colors.buttonDefault.bg }} hover:{{ colors.buttonCustom.textHover or colors.buttonDefault.textHover }} hover:{{ heroSettings.buttonBgHover or colors.buttonCustom.bgHover or colors.buttonDefault.bgHover }} {{ heroSettings.buttonBorder or colors.buttonCustom.border or colors.buttonDefault.border }}">{{ heroSettings.buttonText }}</a>
        </div>
      {% endif %}
    </div>
  </div>
  <div class="relative w-full h-1/2 lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2 lg:h-full lg:mr-12">
    <img
      class="absolute inset-0 object-cover w-full h-full"
      src="/assets/images/{{ heroSettings.bg.image }}"
      alt="Hero Image"/>
  </div>
</main>